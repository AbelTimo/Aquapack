{
  "name": "aquapack",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "api",
    "web",
    "mobile",
    "shared"
  ],
  "scripts": {
    "api:dev": "npm run dev --workspace=api",
    "api:build": "npm run build --workspace=api",
    "web:dev": "npm run dev --workspace=web",
    "web:build": "npm run build --workspace=web",
    "mobile:start": "npm run start --workspace=mobile",
    "mobile:ios": "npm run ios --workspace=mobile",
    "mobile:android": "npm run android --workspace=mobile",
    "db:migrate": "npm run migrate --workspace=api",
    "db:seed": "npm run seed --workspace=api",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
